extends admin

block entidad
	script(type="text/javascript").
	h1.page-header Scheduled Fligths
	.botones
		ul.nav.nav-tabs
			li
				a(href="/programaVuelos") Home
			li.active
				a(href="/programaVuelos/crear") New
	.container-fluid
			h3.sub-header New Scheduled Fligth
			form.form-horizontal(method='post', action='/programaVuelos')
				.form-group.row
					label.col-sm-2.control-label Weeks Days
					.col-sm-8
						input.form-control(type='number', placeholder='', name='week_days', required, max='100')
				.form-group.row
					label.col-sm-2.control-label Estimated Departure
					.col-sm-8
						input.form-control(type='time', placeholder='13:00', name='estimated_departure', required)
				.form-group.row
					label.col-sm-2.control-label Estimated Duration
					.col-sm-8
						input.form-control(type='time', placeholder='54 Hours', name='estimated_duration', required)
				.form-group.row
					label.col-sm-2.control-label Destiny City
					.col-sm-8
						input.form-control(type='text', placeholder='Destiny Code', name='destiny_code', required)
				.form-group.row
					label.col-sm-2.control-label Origin City
					.col-sm-8
						input.form-control(type='text', placeholder='Origin Code', name='origin_code', required)
				.form-group.row
					label.col-sm-2.control-label Airplane Model
					.col-sm-8
						input.form-control(type='text', placeholder='Codigo Ciudad Destino', name='airplane_t_model', required)
				.form-group
					.col-sm-offset-2.col-sm-10
						button.btn.btn-primary.btn-lg(type='submit') Submit