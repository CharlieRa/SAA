extends admin

block entidad
	script(type="text/javascript").
	h1.page-header Airlines
	.botones
		ul.nav.nav-tabs
			li
				a(href="/aerolineas") Home
			li.active
				a(href="/aerolineas/crear") New
	.container-fluid
		h3.sub-header New Airline
		form.form-horizontal(method='post', action='/aerolineas', id='formulario')
			.form-group
				label.col-sm-2.control-label Name
				.col-sm-8
					input.form-control(type='text', placeholder='AirFrance', name='name', required, maxlength='15')
			.form-group
				label.col-sm-2.control-label Acronym
				.col-sm-8
					input.form-control(type='text', placeholder='AF', name='acronym', required,maxlength='3')
			.form-group
				.col-sm-offset-2.col-sm-10
					button.btn.btn-primary.btn-lg(type='submit') Submit