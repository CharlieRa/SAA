extends admin

block entidad
	script(type="text/javascript").
	h1.page-header Ciudades
	.page-header
		.botones
			ul.nav.nav-tabs
				li
					a(href="/ciudades") Ver
				li.active
					a(href="/ciudades/crear") Crear
				li
					a(href="#") Modificar
				li
					a(href="#") Borrar

.container
		h3.titulo Crear Ciudad
		form.form-horizontal(method='post', action='/ciudades')
			.form-group.row
				label.col-sm-2.control-label
				.col-sm-10
					input.form-control(type='text', placeholder='Codigo Ciudad' name='code')
			.form-group.row
				label.col-sm-2.control-label
				.col-sm-10
					input.form-control(type='text', placeholder='Nombre', name='name')
			.form-group.row
				label.col-sm-2.control-label
				.col-sm-10
					input.form-control(type='text', placeholder='Codigo Pais', name='c_code')
			.form-group
				.col-sm-offset-2.col-sm-10
					button.btn.btn-primary.btn-lg.btn-block(type='submit') Enviar