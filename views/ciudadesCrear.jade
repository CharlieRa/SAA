extends admin

block entidad
	script(type="text/javascript").
	h1.page-header Citys
	.botones
		ul.nav.nav-tabs
			li
				a(href="/ciudades") Home
			li.active
				a(href="/ciudades/crear") New
	.container-fluid
		h3.sub-header New City
		form.form-horizontal(method='post', action='/ciudades')
			.form-group.row
				label.col-sm-2.control-label City Code
				.col-sm-8
					input.form-control(type='text', placeholder='Code',name='code',required,maxlength='3')
			.form-group.row
				label.col-sm-2.control-label Name
				.col-sm-8
					input.form-control(type='text', placeholder='City', name='name',required,maxlength='255')
			.form-group.row
				label.col-sm-2.control-label Country
				.col-sm-8
					select.form-control.selectFull(name='c_code')
						- for(var i=0; i< data.length; i++){
						option(value=data[i].CODE) #{data[i].NAME}
						- }
			.form-group
				.col-sm-offset-2.col-sm-10
					button.btn.btn-primary.btn-lg(type='submit') Submit
