extends admin

block entidad
		include layout	
		.row
			.col-sm-8
				input#search.form-control(type='search', value='', placeholder='Search by ID, Name or Acronym')
		.container-fluid 
				br 
				table.table.table-striped.table-bordered#table
					thead
						tr
							th Name
							th Points/Dollar
							th Edit
							th Delete
					tbody
						- for (var i = 0; i < data.length; i++)
								tr
									td #{data[i].NAME}
									td #{data[i].PTS_PER_DOLLAR}
									td(style='width:5px;')
										a(href="/alliance/modificar/#{data[i].ID}",class="btn btn-warning")
											span.glyphicon.glyphicon-edit
									td(style='cursor: pointer; width:5px;')
										a(onclick="confirmGetMessage(#{data[i].ID})",class="btn btn-danger")
											span.glyphicon.glyphicon-trash
			ul.pagination
				li
					a(href='#') «
				li.active
					a(href='#') 1
				li
					a(href='#') 2
				li
					a(href='#') »