extends admin

block entidad
	script(type="text/javascript").
	h1.page-header Passenger
	.botones
		a.btn.btn-primary(type='button',href="/pasajeros")
			span.glyphicon.glyphicon-chevron-left Back
	.container-fluid
		h3.sub-header Edit Passenger 
		form.form-horizontal(method='post', action='/pasajeros/modificar')
			.form-group.row
				label.col-sm-2.control-label Name
				.col-sm-8
					input.form-control(type='text', name='name',required, maxlength='1',value='#{data[0].NAME}')
			.form-group.row
				label.col-sm-2.control-label Personal Identification Number
				.col-sm-8
					input.form-control(type='number', name='pin',required, max='11',value='#{data[0].PIN}')
			.form-group.row
				label.col-sm-2.control-label Sex
				.col-sm-8
					input.form-control(type='text',  name='sex', required, maxlength='1',value='#{data[0].SEX}')
			.form-group.row
				label.col-sm-2.control-label Birthday
				.col-sm-8
					input.form-control(type='date',  name="birthday",required,value='#{data[0].BIRTHDAY}')
			.form-group.row
				label.col-sm-2.control-label Nacionality
				.col-sm-8
					select.form-control.selectFull(name='c_code',required)
