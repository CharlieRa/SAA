extends admin

block entidad
	script(type="text/javascript").
	h1.page-header Airport
	.botones
		a.btn.btn-primary(type='button',href="/aeropuertos")
			span.glyphicon.glyphicon-chevron-left Back	
	.container-fluid
		h3.sub-header New Airport
		form.form-horizontal(method='post', action='/aeropuertos/modificar')
			.form-group.row
				label.col-sm-2.control-label Code
				.col-sm-8
					input.form-control(type='text',name='code',required, maxlength='3',value="#{data[0].CODE}",readonly)
			.form-group.row
				label.col-sm-2.control-label Name
				.col-sm-8
					input.form-control(type='text', name='name',required, maxlength='30',value="#{data[0].NAME}")
			.form-group.row
				label.col-sm-2.control-label Coordinates
				.col-sm-8
					input.form-control(type='text', name='coordinates', maxlength='11',value="#{data[0].COORDINATES}")
			.form-group.row
				label.col-sm-2.control-label City
				.col-sm-8
					input.form-control(type='text', name='city_id',required, maxlength='3',value="#{data[0].CITY_ID}")
			.form-group
				.col-sm-offset-2.col-sm-10
					button.btn.btn-primary.btn-lg(type='submit') Submit