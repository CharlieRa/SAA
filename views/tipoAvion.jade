extends admin

block entidad
        include layout
        .row
            .col-sm-8
                input#search.form-control(type='search', value='', placeholder='Search')
        .container-fluid
            h3.sub-header Airplane Type
            table.table.table-striped.table-bordered#table
                thead
                    tr
                        th Model
                        th Made By
                        th Capacity
                        th Edit
                        th Delete
                tbody
                    - for (var i = 0; i < data.length; i++)
                        tr
                            td #{data[i].MODEL}
                            td #{data[i].MADE_BY}
                            td #{data[i].CAPACITY}
                            td(style='width:5px;')
                                a(href="/tipoAvion/modificar/#{data[i].MODEL}")
                                    span.glyphicon.glyphicon-edit
                            td(style='cursor: pointer; width:5px;')
                                a(onclick="confirmGetModel(#{data[i].MODEL})")
                                    span.glyphicon.glyphicon-trash
            ul.pagination
                li
                    a(href='#') «
                li.active
                    a(href='#') 1
                li
                    a(href='#') 2
                li
                    a(href='#') 3
                li
                    a(href='#') 4
                li
                    a(href='#') 5
                li
                    a(href='#') »