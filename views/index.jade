doctype html
html(lang="es")
	head
		title Sistemas de Administracion de Aeropuertos - SAA
		link(href='/stylesheets/bootstrap.css', rel='stylesheet')
		link(href='/stylesheets/cover.css', rel='stylesheet')
	body
		.site-wrapper
			.site-wrapper-inner
				.cover-container
					.masthead.clearfix
						.inner
							h3.masthead-brand SAA
							ul.nav.masthead-nav
								li.active
									a(href='#') Sign In
								li
									a(href='#') Sign Up
								li
									a(href='/login') Admin
					.inner.cover
						h1.cover-heading Sistema de Administracion de Aeropuertos - SAA
						p.lead
							a.btn.btn-lg.btn-default(href='#',data-toggle='modal', data-target='#myModal') Sign In
					.mastfoot
						.inner
	#myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
		.modal-dialog
			.modal-content
				.modal-header
					button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
					h4#myModalLabel.modal-title New Airport
				.modal-body 
					
				.modal-footer
					button.btn.btn-default(type='button', data-dismiss='modal') Close
					button.btn.btn-primary(type='button') Save changes

		script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
