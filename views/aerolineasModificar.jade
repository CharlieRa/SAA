extends admin

block entidad
	script(type="text/javascript").
	h1.page-header Airlines
	.botones
		a.btn.btn-primary(type='button',href="/aerolineas")
			span.glyphicon.glyphicon-chevron-left Back
	.container-fluid
		h3.sub-header Edit Airline
		form.form-horizontal(method='post', action='/aerolineas/modificar/', id='formulario')
			.form-group
				label.col-sm-2.control-label ID
				.col-sm-8
					input.form-control(type='text', value='#{data[0].ID}', name='id', required, maxlength='15')
			.form-group
				label.col-sm-2.control-label Name
				.col-sm-8
					input.form-control(type='text', value='#{data[0].NAME}', name='name', required, maxlength='15')
			.form-group
				label.col-sm-2.control-label Acronym
				.col-sm-8
					input.form-control(type='text',value='#{data[0].ACRONYM}', name='acronym', required,maxlength='3')
			.form-group
				.col-sm-offset-2.col-sm-10
					button.btn.btn-primary.btn-lg(type='submit') Submit