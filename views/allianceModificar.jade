extends admin

block entidad
	script(type="text/javascript").
	h1.page-header Alliance
	.botones
		a.btn.btn-primary(type='button',href="/alliance/modificar")
			span.glyphicon.glyphicon-chevron-left Back
	.container-fluid
		h3.sub-header Edit Alliance
		form.form-horizontal(method='post', action='/alliance', id='formulario')
			.form-group
				label.col-sm-2.control
				.col-sm-8
					input(type='hidden',name='id' ,value='#{data[0].ID}')
			.form-group
				label.col-sm-2.control-label Name
				.col-sm-8
					input.form-control(type='text', value='#{data[0].NAME}', name='name', required, maxlength='15')
			.form-group
				label.col-sm-2.control-label Points/Dollar
				.col-sm-8
					input.form-control(type='number', value='#{data[0].PTS_PER_DOLLAR}', name='points', required,step='any' )
			.form-group
				.col-sm-offset-2.col-sm-10
					button.btn.btn-primary.btn-lg(type='submit') Submit