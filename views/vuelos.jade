extends admin

block entidad
		include layout
		.row
			.col-sm-8
				input#search.form-control(type='search', value='', placeholder='Search')
		.container-fluid
			h3.sub-header Flights
			table.table.table-striped.table-bordered#table
				thead
					tr
						th Departure Time
						th Arrival Time
						th Plane ID
						th Scheduled Flight ID
						th Gate
						th Edit
						th Delete
				tbody
					- for (var i = 0; i < data.length; i++)
							tr
								td #{data[i].DEPARTURE_TIME}
								td #{data[i].ARRIVAL_TIME}
								td #{data[i].PLANE_ID}
								td #{data[i].S_FLIGHT_ID}
								td #{data[i].GATE_NAME}
								td(style='width:5px;')
									a(href="/vuelos/modificar/#{data[i].ID}")
										span.glyphicon.glyphicon-edit
								td(style='width:5px;')
									a(onclick="confirmGetMessage(#{data[i].ID})")
										span.glyphicon.glyphicon-trash
			ul.pagination
				li
					a(href='#') «
				li.active
					a(href='#') 1
				li
					a(href='#') 2
				li
					a(href='#') 3
				li
					a(href='#') 4
				li
					a(href='#') 5
				li
					a(href='#') »	