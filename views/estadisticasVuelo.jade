extends admin

block entidad
	script(type='text/javascript', src='http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
	script(type="text/javascript").
	h1.page-header Statistics
	.botones
		ul.nav.nav-tabs
			li.active
				a(href="/vuelos/estadisticas") Flight
	.container-fluid
		h3.sub-header Flight on the day
		form.form-horizontal(method='post', action='/vuelos/estadisticas')
			.form-group
				label.col-sm-2.control-label Day
				.col-sm-8
					input.form-control(type='text', placeholder='2010-10-10 12:00', name='fecha', required)
				.col-sm-4
					script(type='text/javascript').
						$(function(){
						$('*[name=fecha]').appendDtpicker({
						"closeOnSelected": true,
						"autodateOnStart": false
						});
						});
			.form-group
				.col-sm-offset-2.col-sm-10
					button.btn.btn-primary.btn-lg(type='submit') Submit