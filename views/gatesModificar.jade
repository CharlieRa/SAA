extends admin

block entidad
	script(type="text/javascript").
	h1.page-header Airlines
	.botones
		a.btn.btn-primary(type='button',href="/gates")
			span.glyphicon.glyphicon-chevron-left Back
	.container-fluid
			h3.sub-header Edit Gate
			form.form-horizontal(method='post', action='/gates')
				.form-group.row
					label.col-sm-2.control-label Name
					.col-sm-8
						input.form-control(type='text',name='name',required,maxlength='4',value='#{data[0].NAME}')
				.form-group
					label.col-sm-2.control-label Status
					.col-sm-8
						input.form-control(type='bool', name='status',required,maxlength='1',value='#{data[0].STATUS}')
				.form-group
					.col-sm-offset-2.col-sm-10
						button.btn.btn-primary.btn-lg(type='submit') Submit