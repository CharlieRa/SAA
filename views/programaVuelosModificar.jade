extends admin

block entidad
	script(type="text/javascript").
	h1.page-header Scheduled Flights
	.botones
		a.btn.btn-primary(type='button',href="/programaVuelos")
			span.glyphicon.glyphicon-chevron-left Back
	.container
		h3.titulo Scheduled Flights Edit
		form.form-horizontal(method='post', action='/programaVuelos/modificar')
			.form-group.row
				label.col-sm-2.control-label Weeks Days
				.col-sm-8
					label.checkbox-inline
						input(type='checkbox',value='1')
					label.checkbox-inline
						input(type='checkbox',value='2')
					label.checkbox-inline
						input(type='checkbox',value='3')
					label.checkbox-inline
						input(type='checkbox',value='4')
					label.checkbox-inline
						input(type='checkbox',value='5')
					label.checkbox-inline
						input(type='checkbox',value='6')
					label.checkbox-inline
						input(type='checkbox',value='7')
			.form-group.row
				label.col-sm-2.control-label
				.col-sm-8
					input.form-control(type='time', placeholder='Hora de Salida', name='estimated_departure')
			.form-group.row
				label.col-sm-2.control-label 
				.col-sm-8
					input.form-control(type='time', placeholder='Duracion del Viaje', name='estimated_duration')
			.form-group.row
				label.col-sm-2.control-label 
				.col-sm-8
					input.form-control(type='text', placeholder='Codigo Ciudad Destino', name='destiny_code')
			.form-group.row
				label.col-sm-2.control-label 
				.col-sm-8
					input.form-control(type='text', placeholder='Codigo Ciudad Destino', name='origin_code')
			.form-group
				.col-sm-offset-2.col-sm-10
					button.btn.btn-primary.btn-lg(type='submit') Submit