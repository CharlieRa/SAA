.container
	form.form-signin(role='form')
		h2.form-signin-heading Agregar Nuevo Vuelo
		input.form-control(type='text', placeholder='ID', autofocus='autofocus' disabled)
		input.form-control(type='date', placeholder='Fecha', required)
		input.form-control(type='time', placeholder='Hora', required)
		button.btn.btn-lg.btn-primary.btn-block(type='submit' value='') Enviar
