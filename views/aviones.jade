extends admin

block entidad
	h1.page-header Aviones
	.page-header
		.botones
		button(id='btn_crear' type="button").btn.btn-success.btnaero Crear Nueva Avion
		button(id='btn_cerrar' type="button" style='display:none;').btn.btn-danger.btnaerocerrar X
	.container.avion(style='display:none;')
		h3.titulo Crear Avion
		form.form-horizontal(method='post', action='/aviones')
			.form-group.row
				label.col-sm-2.control-label ID
				.col-sm-10
					input.form-control(type='text', placeholder='ID' disabled)
					span.help-block ID autogenerado
			.form-group.row
				label.col-sm-2.control-label Gasolina
				.col-sm-10
					input.form-control(type='text', placeholder='Tipo Gasolina', name='gasolina')
					span.help-block Octanage
			.form-group.row
				label.col-sm-2.control-label Aerolinea
				.col-sm-10
					input.form-control(type='text', placeholder='Id_aerlonia', name='id_aerolinea')
					span.help-block Id de la aerolinea del avion
			.form-group.row
				label.col-sm-2.control-label Piloto
				.col-sm-10
					input.form-control(type='text', placeholder='Nombre Piloto', name='piloto')
					span.help-block Nombre del piloto
			.form-group.row
				label.col-sm-2.control-label Año
				.col-sm-10
					input.form-control(type='text', placeholder='Año', 
					name='año')
					span.help-block Año de fabricacion
			.form-group.row
				label.col-sm-2.control-label Tipo Avion
				.col-sm-10
					input.form-control(type='text', placeholder='Id_tipo_avion', 
					name='id_tipo_avion')
					span.help-block
					span.help-block id del tipo de avion  
			.form-group
				.col-sm-offset-2.col-sm-10
					button.btn.btn-primary.btn-lg.btn-block(type='submit') Enviar
	.container2
			h2.sub-header Listado de Aviones
			table.table.table-striped.table-bordered
				thead
					tr
						th ID
						th Gasolina
						th Piloto
						th Año
						th Id_Aerolinea
						th Id_Tipo_Avion
				tbody
					- for (var i = 0; i < data.length; i++)
							tr
								td #{data[i].id}
								td #{data[i].gasolina}
								td #{data[i].piloto}
								td #{data[i].año}
								td #{data[i].id_aerolinea}
								td #{data[i].id_tipo_avion}
	script
		$( ".btnaero" ).click(function(){
		$( ".aero" ).show( 400 );
		$( ".btnaerocerrar" ).show( 400 );
		});
		$( ".btnaerocerrar" ).click(function(){
		$( ".aero" ).hide( 400 );
		$( ".btnaerocerrar" ).hide( 400 );
		});