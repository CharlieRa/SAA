extends admin

block entidad
	include layout
	.row
		.col-sm-8
			input#search.form-control(type='search', value='', placeholder='Search by ID, Name or Acronym')
	.container-fluid
			h2.sub-header Airplain List
			table.table.table-striped.table-bordered#table
				thead
					tr
						th ID
						th Year
						th Gas Level
						th Pilot
						th Co-Pilot
						th Airline
						th Model
						th Edit
						th Delete
				tbody
					- for (var i = 0; i < data.length; i++)
							tr
								td #{data[i].ID}
								td #{data[i].YEAR}
								td #{data[i].GAS_LEVEL}
								td #{data[i].PILOT}
								td #{data[i].COPILOT}
								td #{data[i].AL}
								td #{data[i].T_MODEL}	
								td(style='width:5px;') 
									a(href="/aviones/modificar/#{data[i].ID}")
										span.glyphicon.glyphicon-edit
                                td(style='cursor: pointer; width:5px;')
									a(onclick="confirmGetMessage(#{data[i].ID})")
										span.glyphicon.glyphicon-trash
		ul.pagination
			li
				a(href='#') «
			li.active
				a(href='#') 1
			li
				a(href='#') 2
			li
				a(href='#') 3
			li
				a(href='#') 4
			li
				a(href='#') 5
			li
				a(href='#') »													
