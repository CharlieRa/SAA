extends admin

block entidad
	script(type="text/javascript")
	h1.page-header Aviones
	.page-header
		.botones
			ul.nav.nav-tabs
				li
					a(href="/aviones") Ver
				li.active
					a(href="/aviones/crear") Crear
				li
					a(href="#") Modificar
				li
					a(href="#") Borrar
	.container
		h3.sub-header Crear Avion
		form.form-horizontal(method='post', action='/aviones')
			.form-group.row
				label.col-sm-2.control-label Gasolina
				.col-sm-10
					input.form-control(type='text', placeholder='Estanque', name='GAS_LEVEL')
			.form-group.row
				label.col-sm-2.control-label Aerolinea
				.col-sm-10
					select.from-control.selectFull(name='AIRLINE_ID')
						- for(var i=0; i< data.length; i++){
						option(value=data[i].ID) #{data[i].NAME}
						- }
			.form-group.row
				label.col-sm-2.control-label Piloto
				.col-sm-10
					input.form-control(type='text', placeholder='Piloto', name='PILOT')
			.form-group.row
				label.col-sm-2.control-label Año
				.col-sm-10
					input.form-control(type='text', placeholder='Año', name='año')
			.form-group.row
				label.col-sm-2.control-label Tipo_Avion
				.col-sm-10
					select.from-control.selectFull(name='T_MODEL')
						- for(var i=0; i< data.length; i++){
						option(value=data[i].ID) #{data[i].MODEL}
						- }
			.form-group
				.col-sm-offset-2.col-sm-10
					button.btn.btn-primary.btn-lg.btn-block(type='submit') Enviar