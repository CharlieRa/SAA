extends admin

block entidad
	script(type="text/javascript").
	h1.page-header Airplane
	.botones
		ul.nav.nav-tabs
			li
				a(href="/aviones") Home
			li.active
				a(href="/aviones/crear") New
	.container-fluid
		h3.sub-header New Airplane
		form.form-horizontal(method='post', action='/aviones')
			.form-group.row
				label.col-sm-2.control-label Year
				.col-sm-8
					input.form-control(type='number', placeholder='2008', name='year',required, max='2014')
			.form-group.row
				label.col-sm-2.control-label Gas Level
				.col-sm-8
					input.form-control(type='number', placeholder='100', name='gas_level',required, max='100000')
			.form-group.row
				label.col-sm-2.control-label Pilot
				.col-sm-8
					input.form-control(type='text', placeholder='Wilbur Wright', name='pilot',required, maxlength='15')
			.form-group.row
				label.col-sm-2.control-label Co-Pilot
				.col-sm-8
					input.form-control(type='text', placeholder='Oliver Wright', name='pilot',required, maxlength='15')
			.form-group.row
				label.col-sm-2.control-label Airline
				.col-sm-8
					select.form-control(name='airline_id')
						- for(var i=0; i< data.length; i++){
						option(value=data[i].ID) #{data[i].NAME}
						- }
			.form-group.row
				label.col-sm-2.control-label Model Plane
				.col-sm-8
					input.form-control(type='text', placeholder='Boeing', name='t_model',required)
			.form-group
				.col-sm-offset-2.col-sm-10
					button.btn.btn-primary.btn-lg(type='submit') Submit