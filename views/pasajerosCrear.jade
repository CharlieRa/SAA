extends admin

block entidad
	script(type="text/javascript").
	h1.page-header Passenger
	.botones
		ul.nav.nav-tabs
			li
				a(href="/pasajeros") Home
			li.active
				a(href="/pasajeros/crear") New
	.container-fluid
		h3.sub-header New Passenger 
		form.form-horizontal(method='post', action='/pasajeros')
			.form-group.row
				label.col-sm-2.control-label Name
				.col-sm-8
					input.form-control(type='text', placeholder='Jorge Valdivia' name='name',required, maxlength='30')
			.form-group.row
				label.col-sm-2.control-label Personal Identification Number
				.col-sm-8
					input.form-control(type='text', placeholder='142347433' name='pin',required, maxlength='15')
			.form-group.row
				label.col-sm-2.control-label Sex (M o F)
				.col-sm-8
					input.form-control(type='text', placeholder='M', name='sex', required, maxlength='1')
			.form-group.row
				label.col-sm-2.control-label Birthday
				.col-sm-8
					input.form-control(type='text', placeholder='yyyy-mm-dd', name="birthday",required,maxlength='20')
			.form-group.row
				label.col-sm-2.control-label Nacionality
				.col-sm-8
					select.form-control.selectFull(name='c_code',required)
						- for(var i=0; i< data.length; i++){
						option(value=data[i].CODE) #{data[i].NAME}
						- }
			.form-group
				.col-sm-offset-2.col-sm-10
					button.btn.btn-primary.btn-lg(type='submit') Submit
