extends admin

block entidad
	script(type="text/javascript").
	h1.page-header Country
	.botones
		a.btn.btn-primary(type='button',href="/paises")
			span.glyphicon.glyphicon-chevron-left Back
	.container-fluid
		h3.sub-header Edit Country
		form.form-horizontal(method='post', action='/paises/modificar')
			.form-group
				label.col-sm-2.control-label Country Code
				.col-sm-8
					input.form-control(type='text',name='code',required,maxlength='3', value='#{data[0].CODE}',readonly)
			.form-group
				label.col-sm-2.control-label Name
				.col-sm-8
					input.form-control(type='text',name='name',required,maxlength='255', value='#{data[0].NAME}')
			.form-group
				label.col-sm-2.control-label Main Language
				.col-sm-8
					input.form-control(type='text',name='main_lang',required,maxlength='20', value='#{data[0].MAIN_LANG}')
			.form-group
				.col-sm-offset-2.col-sm-10
					button.btn.btn-primary.btn-lg(type='submit') Submit